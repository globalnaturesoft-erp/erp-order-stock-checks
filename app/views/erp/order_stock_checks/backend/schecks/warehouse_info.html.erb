<% Erp::Products::Product.where(id: params[:ids].split(',')).each do |p| %>
    <%
        total = rand(0..8)
        stock1 = rand(0..total)
        stock2 = total-stock1
    %>
    <div class="btn-group">
        <a class="btn btn-sm dropdown-toggle" data-toggle="dropdown" href="javascript:;"> <%= p.name %> (<%= p.get_stock %>)
            <i class="fa fa-angle-down"></i>
        </a>
        <ul class="dropdown-menu">
            <% Erp::Warehouses::Warehouse.all_active.each do |warehouse| %>
                <li>
                    <a href="javascript:;"> <%= warehouse.name %>
                        <span class="badge badge-success"> <%= p.get_stock(warehouse: warehouse) %> </span>
                    </a>
                </li>
            <% end %>
        </ul>
    </div>
<% end %>